<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ResumeSelect">

    <TextView
        android:id="@+id/ResumeSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the resume formate"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:textSize="30sp"
        android:textStyle="bold"

        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="10dp">


        <ImageView
            android:id="@+id/resume0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:contentDescription="It is the 1st option of resume"
            android:alpha="1"
            app:srcCompat="@drawable/resume1"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/resume1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:contentDescription="It is the 2nd Option of resume"
            android:background="@color/black"
            app:srcCompat="@drawable/resume2"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <ImageButton
            android:id="@+id/Idback"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/Blue"
            android:layout_margin="10dp"
            android:contentDescription="previous option"
            app:srcCompat="@android:drawable/ic_media_rew" />

        <ImageButton
            android:id="@+id/Idnext"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@color/Blue"
            android:contentDescription="next option"
            app:srcCompat="@android:drawable/ic_media_ff" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewResume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resume 1"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="30dp"
        android:background="@drawable/bg"
        android:textColor="@color/white"


        />
</LinearLayout>